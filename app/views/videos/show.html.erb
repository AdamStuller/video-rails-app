
<%= render 'navbar' %>

<div class="container ">
  <div class="row ">

    <div class="card col s9  " , style="color:#18ABFD">
      <div class="section">
        <%= video_tag url_for(@video.video_file),  :controls => true, :class => "responsive-video " %>
        <p>
          <strong>Name:</strong>
          <%= @video.name %>
        </p>
        <p>
          <strong>Desc:</strong>
          <%= @video.desc %>
        </p>
        <%= link_to 'Edit', edit_video_path(@video) %> |
        <%= link_to 'Back', videos_path %>
      </div>
      <p id="notice"><%= notice %></p>
    </div>


    <form class="col s3 push -s9">
      <div class="input-field col s12">
        <input placeholder="Your text" id="subtitle" type="text" class="validate">
          <label for="subtitle">Write your text here</label>
        <button type="submit" id="submit-text-button" class="waves-effect waves-light btn">Edit</button>
      </div>
    </form>


  </div>
</div>




